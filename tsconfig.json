{
	"compilerOptions": {
	  "target": "es6",
	  "module": "commonjs",
	  "outDir": "./dist",
	  "strict": true,
	  "pretty": true,
	  "esModuleInterop": true,
		"resolveJsonModule": true,
		"rootDir": "./",
	  "baseUrl": ".",
	  "paths": {
	  	"@app/*": [
			"src/*"
		],
  		"@api/*": [
			"src/api/*"
		],
		"@model/*": [
			"src/models/*"
		],
		"@route/*": [
			"src/routes/*"
		],
		"@controller/*": [
			"src/controllers/*"
		],
		"@config": [
			"src/config"
		],
		"@constant" : [
			"src/config/constants.ts"
		],
		"@interfaces/*": [
			"src/interfaces/*"
		],
		"@util/*": [
			"src/util/*"
		]
	  }
	},
	"include": [
	  "src/**/*.ts",
		"__tests__/**.*.ts"
	],
	"exclude": [
	  "node_modules"
	],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}