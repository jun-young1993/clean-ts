{
	"compilerOptions": {
	  "target": "es6",
	  "module": "commonjs",
	  "outDir": "./dist",
	  "strict": true,
	  "esModuleInterop": true,
		"resolveJsonModule": true,
		"rootDir": "./",
	  "baseUrl": ".",
	  "paths": {
	  	"@app/*": [
			"src/*"
		],
  		"@api/*": [
			"src/api/*"
		],
		"@route/*": [
			"src/routes/*"
		]
	  }
	},
	"include": [
	  "src/**/*.ts",
		"__tests__/**.*.ts"
	],
	"exclude": [
	  "node_modules"
	],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}